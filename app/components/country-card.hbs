<div class="country-card">
  <LinkTo @route="detail" @model={{lowercase @country.alpha2Code}} class={{concat "country " this.status}}>
    <div class="country-flag">
      <img 
        src={{@country.flag}}
        alt={{@country.name}}
        class="country-flag-img"
        {{on "load" this.imgLoaded}} />
    </div>
    <div class="country-details">
      <h3>{{@country.name}}</h3>
      <ul class="country-more">
        <li><strong>Population:</strong> {{number-seperator number=@country.population}}</li>
        <li><strong>Region:</strong> {{@country.region}}</li>
        <li><strong>Capital:</strong> {{if @country.capital @country.capital "No capital"}}</li>
      </ul>
    </div>
  </LinkTo>
</div>